<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextViewActorName">
        <item name="android:textColor">@color/actors_grey</item>
        <item name="android:fontFamily">@font/roboto_black_font</item>
        <item name="android:textSize">@dimen/text_12</item>

    </style>

    <style name="TextViewMiddleHeading">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_whitish</item>
        <item name="android:fontFamily">@font/roboto_black_font</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">12</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">@dimen/text_4</item>
    </style>

    <style name="TextViewFilmName">
        <item name="android:textSize">@dimen/text_40</item>
        <item name="android:fontFamily">@font/roboto_black_font</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">@color/text_whitish</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">12</item>
        <item name="android:includeFontPadding">false</item>

    </style>

    <style name="TextViewFilmName.Small" parent="TextViewFilmName">
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:lineSpacingExtra">@dimen/text_4</item>
    </style>

    <style name="TextViewBack">
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:textColor">@color/white_opac_0.5</item>
        <item name="android:fontFamily">@font/roboto_light_font</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:lineSpacingExtra">@dimen/text_2</item>
    </style>

    <style name="TextViewAge">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_black_font</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:background">@drawable/rectangle</item>
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_width">@dimen/dimen_24</item>
        <item name="android:layout_height">@dimen/dimen_24</item>
    </style>

    <style name="TextViewGenre">
        <item name="android:textColor">@color/text_reddish</item>
        <item name="android:fontFamily">@font/roboto_light_font</item>
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">@dimen/text_4</item>
    </style>

    <style name="TextViewGenre.Small" parent="TextViewGenre">
        <item name="android:textSize">@dimen/text_8</item>
        <item name="android:lineSpacingExtra">@dimen/text_3</item>
    </style>

    <style name="TextViewReviewsCounter">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:fontFamily">@font/roboto_black_font</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:lineSpacingExtra">@dimen/text_4</item>
    </style>

    <style name="TextViewReviewsCounter.Small" parent="TextViewReviewsCounter">
        <item name="android:textSize">@dimen/text_8</item>
        <item name="android:lineSpacingExtra">@dimen/text_3</item>
    </style>

    <style name="TextViewFilmDescription">
        <item name="android:textColor">@color/white_opac_0.75</item>
        <item name="android:fontFamily">@font/roboto_light_font</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">@dimen/text_4</item>
    </style>

    <style name="TextViewDuration">
        <item name="android:fontFamily">@font/roboto_black_font</item>
        <item name="android:textSize">@dimen/text_8</item>
        <item name="android:textColor">#565665</item>
        <item name="android:lineSpacingExtra">@dimen/text_3</item>
        <item name="textAllCaps">true</item>
    </style>


</resources>