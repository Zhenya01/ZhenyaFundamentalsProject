<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="actor_name">
        <item name="android:textColor">@color/actors_grey</item>
        <item name="android:fontFamily">@font/roboto_black_font</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

    <style name="middle_heading">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_whitish</item>
        <item name="android:fontFamily">@font/roboto_black_font</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">12</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="name">
        <item name="android:textSize">40sp</item>
        <item name="android:fontFamily">@font/roboto_black_font</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">@color/text_whitish</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">12</item>
        <item name="android:includeFontPadding">false</item>

    </style>

    <style name="back">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_light_font</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="age">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_black_font</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:background">@drawable/rectangle</item>
        <item name="android:textSize">12sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="genre">
        <item name="android:textColor">@color/text_reddish</item>
        <item name="android:fontFamily">@font/roboto_light_font</item>
        <item name="android:textSize">14sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="reviews">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:fontFamily">@font/roboto_black_font</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="description">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_light_font</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>
</resources>